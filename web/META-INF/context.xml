<?xml version="1.0" encoding="UTF-8"?>
<Context antiJARLocking="true" path="/encuestas">
    <Resource 
          name="jdbc/encuestas" 
          type="javax.sql.DataSource"
          auth="Container"
          driverClassName="com.mysql.jdbc.Driver"
          url="jdbc:mysql://localhost:3306/encuestas"
          username="encuestas" password="encuestas"
          maxActive="50" maxIdle="30" maxWait="10000"
          validationQuery="SELECT 1 FROM DUAL"
    />      
</Context>
