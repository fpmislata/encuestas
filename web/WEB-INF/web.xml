<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">

    <listener>
        <listener-class>es.logongas.ix3.web.hibernate.HibernateContextListener</listener-class>
    </listener>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>
            classpath:ix3core.xml
            classpath:ix3dao.xml
            classpath:ix3security.xml
            classpath:ix3securityimpl.xml
            classpath:ix3web.xml
            classpath:applicationContext.xml
        </param-value>
    </context-param>
    
    <context-param>
      <param-name>databasemigration.location</param-name>
      <param-value>es.logongas.encuestas.persistencia.database</param-value>
    </context-param>    
    <listener>
        <listener-class>es.logongas.ix3.web.database.DatabaseMigrateContextListener</listener-class>
    </listener>

    <filter>
        <filter-name>HibernateContextListenerAndFilter</filter-name>
        <filter-class>es.logongas.ix3.web.hibernate.HibernateFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>HibernateContextListenerAndFilter</filter-name>
        <url-pattern>/api/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>HibernateContextListenerAndFilter</filter-name>
        <url-pattern>/images/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>HibernateContextListenerAndFilter</filter-name>
        <url-pattern>*.html</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>HibernateContextListenerAndFilter</filter-name>
        <url-pattern>/ix3lib/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>HibernateContextListenerAndFilter</filter-name>
        <url-pattern>*.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>HibernateContextListenerAndFilter</filter-name>
        <url-pattern>/monitoring</url-pattern>
    </filter-mapping>    

    <filter>
        <filter-name>filterImplSecurity</filter-name>
        <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>filterImplSecurity</filter-name>
        <url-pattern>/api/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>filterImplSecurity</filter-name>
        <url-pattern>/images/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>filterImplSecurity</filter-name>
        <url-pattern>*.html</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>filterImplSecurity</filter-name>
        <url-pattern>/ix3lib/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>filterImplSecurity</filter-name>
        <url-pattern>*.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>filterImplSecurity</filter-name>
        <url-pattern>/monitoring</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>dispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>/api/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>/images/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>*.html</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>/ix3lib/*</url-pattern>
    </servlet-mapping>

    <error-page>
        <exception-type>java.lang.Exception</exception-type>
        <location>/WEB-INF/jsp/errores/exception.jsp</location>
    </error-page>
    <error-page>
        <error-code>400</error-code>
        <location>/WEB-INF/jsp/errores/400BadRequest.jsp</location>
    </error-page>
    <error-page>
        <error-code>401</error-code>
        <location>/WEB-INF/jsp/errores/401Unauthorized.jsp</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/WEB-INF/jsp/errores/403Forbidden.jsp</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/jsp/errores/404NotFound.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/WEB-INF/jsp/errores/500InternalServerError.jsp</location>
    </error-page>

    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
